//TODO: create eslint disable for the linting error here
{
  "compilerOptions": {
    "target": "ESnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    // "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "moduleResolution": "node"
  },
  "types": [
    "@types/jest",
    "@testing-library/jest-dom",
    "node",
    "@types/testing-library__jest-dom"
  ], //ADD FOR JEST TO WORK
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src",
    "tests",
    "jest-setup.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
